{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1
      }
    ],
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": false
      }
    ],
    "vue/max-attributes-per-line": [
      "off"
    ],
    "vue/html-self-closing": [
      "off"
    ],
    "vue/first-attribute-linebreak": [
      "error",
      {
        "singleline": "beside",
        "multiline": "beside"
      }
    ],
    "vue/component-tags-order": [
      "error",
      {
        "order": [
          "template",
          "style",
          "script"
        ]
      }
    ],
    "vue/multi-word-component-names": [
      "off"
    ],
    "vue/singleline-html-element-content-newline": [
      "off"
    ],
    "vue/html-closing-bracket-spacing": [
      "error",
      {
        "selfClosingTag": "never"
      }
    ],
    "vue/v-slot-style": [
      "error",
      {
        "default": "v-slot",
        "named": "longform"
      }
    ],
    "vue/prop-name-casing": [
      "error",
      "snake_case"
    ],
    "vue/component-definition-name-casing": [
      "error",
      "kebab-case"
    ]
  }
}